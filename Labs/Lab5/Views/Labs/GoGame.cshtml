@model Lab5.Models.GoGameViewModel

@{
    ViewData["Title"] = "Go Game Atari Checker";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="GoGame" method="post">
    <div class="form-group">
        <label asp-for="BoardSize"></label>
        <input asp-for="BoardSize" class="form-control" />
        <span asp-validation-for="BoardSize" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BoardLinesInput"></label>
        <textarea asp-for="BoardLinesInput" class="form-control" rows="8"></textarea>
        <span asp-validation-for="BoardLinesInput" class="text-danger"></span>
        <small class="form-text text-muted">
            Введіть лінії дошки, розділені новими рядками. Літери мають бути 'B', 'W', або '.'.
        </small>
    </div>

    <button type="submit" class="btn btn-primary">Перевірити групи в атарі</button>
</form>

@if (Model.GroupsInAtari.HasValue)
{
    <div class="alert alert-success mt-3">
        <strong>Групи в атарі:</strong> @Model.GroupsInAtari
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
